<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nbufe.zfr.UniTakeout_server.mapper.VerificationCodeMapper">
    <select id="selectLatestByPhone" resultType="VerificationCode">
        SELECT * FROM verification_code
        WHERE phone = #{phone}
        ORDER BY create_time DESC
        LIMIT 1
    </select>
    
    <insert id="insert">
        INSERT INTO verification_code (phone, code)
        VALUES (#{phone}, #{code})
    </insert>
    
    <delete id="deleteByPhone">
        DELETE FROM verification_code WHERE phone = #{phone}
    </delete>
</mapper>

