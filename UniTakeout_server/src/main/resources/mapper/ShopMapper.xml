<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nbufe.zfr.UniTakeout_server.mapper.ShopMapper">
    <select id="selectById" resultType="Shop">
        SELECT * FROM shop WHERE id = #{id}
    </select>
    
    <select id="selectList" resultType="Shop">
        SELECT * FROM shop
        <where>
            <if test="keyword != null and keyword != ''">
                name LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
        <choose>
            <when test="sort == 'sales'">ORDER BY monthly_sales DESC</when>
            <when test="sort == 'rating'">ORDER BY rating DESC</when>
            <when test="sort == 'distance'">ORDER BY distance ASC</when>
            <otherwise>ORDER BY id DESC</otherwise>
        </choose>
        LIMIT #{offset}, #{limit}
    </select>
    
    <select id="count" resultType="Long">
        SELECT COUNT(*) FROM shop
        <where>
            <if test="keyword != null and keyword != ''">
                name LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
    </select>
</mapper>

